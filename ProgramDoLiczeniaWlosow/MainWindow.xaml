<Window x:Class="HairCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kalkulator Włosów" Height="400" Width="400">
    <Grid Margin="10">
        <TextBlock Text="Gęstość włosów (włosy/cm²):" Margin="0,0,0,10"/>
        <TextBox x:Name="PoleGestosc" Margin="0,20,0,311"/>

        <TextBlock Text="Obwód głowy (cm):" Margin="0,60,0,10"/>
        <TextBox x:Name="PoleObwodGlowy" Margin="0,80,0,244"/>

        <TextBlock Text="Wysokość czoła (cm):" Margin="0,120,0,10"/>
        <TextBox x:Name="PoleWysokoscCzola" Margin="0,140,0,188"/>

        <Button Content="Oblicz" Margin="-1,181,1,130" Click="PrzyciskOblicz_Click" RenderTransformOrigin="0.5,0.5"></Button>

    </Grid>
</Window>
