<Window x:Class="HairCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kalkulator Włosów" Height="400" Width="400">
    <Grid Margin="10">
        <TextBlock Text="Gęstość włosów (włosy/cm²):" Margin="0,0,0,10"/>
        <TextBox x:Name="PoleGestosc" Margin="0,20,0,284"/>

        <TextBlock Text="Obwód głowy (cm):" Margin="0,60,0,10"/>
        <TextBox x:Name="PoleObwodGlowy" Margin="0,80,0,221"/>

        <TextBlock Text="Wysokość czoła (cm):" Margin="0,120,0,10"/>
        <TextBox x:Name="PoleWysokoscCzola" Margin="0,140,0,162"/>

        <Button Content="Oblicz" Margin="0,181,4,115" Click="PrzyciskOblicz_Click" RenderTransformOrigin="0.5,0.5"></Button>
        <Button Content="Resetuj" Margin="2,223,2,70" Click="PrzyciskResetuj_Click" RenderTransformOrigin="0.5,0.5"></Button>

        <TextBlock x:Name="TekstWynik" Margin="-4,294,4,-8" FontWeight="Bold" TextWrapping="Wrap" RenderTransformOrigin="0.505,0.213"/>
        <TextBlock x:Name="TekstProcentowaRoznica" Width="300" Margin="-5,325,85,-7"/>
    </Grid>
</Window>
